<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.unleashed.android.helpers.apprating.DrawableRatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/md_8dp_margin"
                    android:layout_marginTop="@dimen/md_36dp_margin"
                    android:visibility="visible"
                    android:numStars="5"
                    android:max="5"
                    android:stepSize="1" />

                <TextView
                    android:id="@+id/rateDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
		            android:textColor="@color/black_56"
                    android:text="@string/review_tap_on_the_star" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rateForm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/md_40dp_margin"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/love_to_hear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_87"
                    android:layout_marginLeft="@dimen/md_16dp_margin"
                    android:layout_marginRight="@dimen/md_16dp_margin"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_subhead"
                    android:text="@string/love_to_hear" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/md_8dp_margin"
                    android:background="@drawable/search_background"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/rateEmail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/md_48dp_margin"
                        android:layout_marginLeft="@dimen/md_12dp_margin"
                        android:layout_marginRight="@dimen/md_12dp_margin"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="@string/review_your_email"
                        android:maxLines="1"
                        android:text=""
                        android:textSize="@dimen/text_size_subhead" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/md_1dp_margin"
                    android:layout_marginLeft="@dimen/md_16dp_margin"
                    android:layout_marginRight="@dimen/md_16dp_margin"
                    android:background="@color/black_12"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/md_8dp_margin"
                    android:background="@drawable/search_background"
                    android:gravity="top">

                    <EditText
                        android:id="@+id/rateBody"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/md_48dp_margin"
                        android:layout_marginLeft="@dimen/md_12dp_margin"
                        android:layout_marginRight="@dimen/md_12dp_margin"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="@string/review_write_us_detailed_comment"
                        android:text=""
                        android:textSize="@dimen/text_size_subhead" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/md_1dp_margin"
                    android:layout_marginLeft="@dimen/md_16dp_margin"
                    android:layout_marginRight="@dimen/md_16dp_margin"
                    android:background="@color/black_12"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_submit_rating"
        android:background="@drawable/submit_button"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/md_48dp_margin"
        android:text="@string/submit"
        android:textAllCaps="true"
        android:textSize="@dimen/text_size_standard"
        android:visibility="visible" />
</LinearLayout>