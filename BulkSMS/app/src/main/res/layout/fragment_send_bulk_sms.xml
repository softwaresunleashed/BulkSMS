<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="fill_parent"
    tools:context=".MainActivity$PlaceholderFragment" >
    <!--android:background="@drawable/main_bg"-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_send_bulk_sms">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollView_send_bulk_sms">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/relativeView_send_bulk_sms">


                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgView_Banner"
                        android:scaleType="center"
                        android:layout_centerHorizontal="true"/>

                    <com.google.android.gms.ads.AdView
                        android:id="@+id/adView_send_bulk_sms_tab"
                        android:layout_below="@id/imgView_Banner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        ads:adSize="BANNER"
                        ads:adUnitId="@string/banner_ad_unit_id"
                        android:layout_centerInParent="true"
                        android:visibility="gone">
                    </com.google.android.gms.ads.AdView>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="@dimen/md_2dp_margin"
                            android:layout_below="@id/adView_send_bulk_sms_tab"
                            android:weightSum="1"
                            android:id="@+id/LinearLayout_Phn_SmsMsg">

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="@string/title_activity_contact_book"
                                android:id="@+id/lbl_PhoneList"
                                android:layout_marginTop="10dp"
                                android:paddingLeft="10dp"
                                android:textStyle="bold|italic"
                                android:gravity="left"
                                android:textColor="#57810f"
                                android:typeface="serif"
                                android:textSize="@dimen/txt_size_14sp" />

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:id="@+id/LinearLayout_ContactInfo"
                                android:weightSum="2">


                                <ListView
                                    android:layout_width="0dp"
                                    android:layout_height="fill_parent"
                                    android:id="@+id/listView_PhnNums"
                                    android:layout_gravity="left"
                                    android:layout_weight="2"
                                    android:layout_margin="4dp"
                                    android:background="@drawable/border_round_corners"
                                    android:padding="1dp" />


                                <ImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/imgbtn_SelectContacts"
                                    android:src="@drawable/select_users"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/button_states"
                                    android:layout_gravity="center" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="SMS Text Message :"
                                android:id="@+id/lbl_SMSText"
                                android:layout_marginTop="30px"
                                android:paddingLeft="10dp"
                                android:textStyle="bold|italic"
                                android:gravity="left"
                                android:textColor="#57810f"
                                android:typeface="serif"
                                android:textSize="@dimen/txt_size_14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="160/0"
                                android:id="@+id/lbl_SMSCharCount"
                                android:layout_marginLeft="10dp"
                                android:textColor="#57810f"
                                android:textStyle="bold|italic"
                                android:typeface="serif"
                                android:background="#fff1c0"
                                android:textSize="@dimen/txt_size_12sp"/>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="2">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_margin="@dimen/md_10dp_margin"
                                    android:inputType="textMultiLine"
                                    android:maxLines="5"
                                    android:maxLength="160"
                                    android:ems="10"
                                    android:id="@+id/et_SMS_msg"
                                    android:layout_gravity="left"
                                    android:background="@drawable/border_round_corners"
                                    android:layout_height="150dp"
                                    android:hint="Enter message to send..."
                                    android:padding="5dp"
                                    android:gravity="top"
                                    android:overScrollMode="always"
                                    android:scrollbarStyle="insideInset"
                                    android:scrollbars="vertical"/>
                                <!--android:background="@drawable/abc_popup_background_mtrl_mult"-->

                            </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/md_4dp_margin">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imgbtn_SendBulkSMS"
                                android:src="@drawable/btnbulksms3"
                                android:background="@drawable/button_states"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:textAllCaps="false"
                                android:layout_marginLeft="10dp"
                                android:text="@string/btn_bulksms_send_now_text" />

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="0dp"
                                android:id="@+id/radgrp_reminder"
                                android:paddingLeft="5dp"
                                android:layout_marginLeft="20dp">

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Send Now"
                                    android:id="@+id/radbtn_sendnow"
                                    android:enabled="true" />

                                <RadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Set Reminder"
                                    android:id="@+id/radbtn_setreminder"
                                    android:visibility="visible" />
                            </RadioGroup>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/md_4dp_margin">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/imgbtn_SendMSG91"
                                android:src="@drawable/btnbulksms3"
                                android:background="@drawable/button_states"
                                android:layout_gravity="center"
                                android:padding="5dp"
                                android:textAllCaps="false"
                                android:layout_marginLeft="10dp"
                                android:text="@string/btn_bulksms_send_now_msg91text" />
                        </LinearLayout>
                    </LinearLayout>

                    </RelativeLayout>
                </ScrollView>
        </RelativeLayout>
    </FrameLayout>


</RelativeLayout>
